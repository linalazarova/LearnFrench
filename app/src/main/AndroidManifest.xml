<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learn_french.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Learn French"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnFrench">
        <activity android:name=".PhrasesActivity"></activity>
        <activity android:name=".MonthsActivity" />
        <activity android:name=".DaysActivity" />
        <activity android:name=".NumbersActivity" />
        <activity android:name=".ColorsActivity" />
        <activity android:name=".AlphabetActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>